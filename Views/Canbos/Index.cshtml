@model IEnumerable<QLTHPT.Models.Canbo>

@{
    ViewData["Title"] = "Index";
}

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h4><strong>CÁN BỘ</strong></h4>
                        </div>
                    </div>
                    <div class="sparkline13-graph">
                        <div class="datatable-dashv1-list custom-datatable-overright">
                            <div id="toolbar">
                                <strong>@Html.ActionLink("Tạo Mới", "Create")</strong>
                            </div>
                            <table id="table" data-resizable="false" data-toggle="table" data-pagination="true" data-search="true" data-cookie="true" data-cookie-id-table="saveId" data-click-to-select="true" data-toolbar="#toolbar">
                                <thead>
                                    <tr>
                                        <th>
                                            Họ Tên
                                        </th>
                                        <th>
                                            Giới Tính
                                        </th>
                                            <th>
                                                Địa Chỉ
                                            </th>
                                            <th>
                                                Ngày Sinh
                                            </th>
                                            <th>
                                                CMND
                                            </th>
                                            <th>
                                                Cơ Quan
                                            </th>
                                            <th>
                                               Khen Thưởng
                                            </th>
                                            <th>
                                                Kỷ Luật
                                            </th>
                                            <th data-width="200px"></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CbHoten)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CbGioitinh)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CbDiachi)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CbNgaysinh)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CbCmnd)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CoquanCqMaNavigation.CqTen)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.KhenthuongcbKtcbMaNavigation.KtcbThanhtich)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.KyluatcbKlcbMaNavigation.KlcbHt )
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@item.CbMa" class="btn btn-custon-rounded-three btn-success"><i class="fa fa-info-circle"></i></a> 
                                                <a asp-action="Edit" asp-route-id="@item.CbMa" class="btn btn-custon-rounded-three btn-warning"><i class="fa fa-edit"></i></a> 
                                                <a asp-action="Delete" asp-route-id="@item.CbMa" class="btn btn-custon-rounded-three btn-danger"><i class="fa fa-trash"></i></a>
                                                <a asp-action="Print" asp-controller="Canbos" asp-route-id="@item.CbMa" class="btn btn-custon-three btn-info" style="color:white;" type="button" target="_blank">In</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>